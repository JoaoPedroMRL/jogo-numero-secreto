function olaMundo(){
    console.log('Olá mundo');
}

function meuNome(nome){
    console.log(`Olá, ${nome}`);
}

meuNome('João');


function numeroQualquer(numero){
    return 2 * numero;
}

let resultado = numeroQualquer(2);
console.log(resultado);

function mediaNumeros(a , b , c){
    return (a + b + c) / 3;
}

let resultado = mediaNumeros(1 , 2 , 3);
console.log(resultado);

function doisNumeros(a , b){
    return a > b ? a : b;
}

let maiorNumero = doisNumeros(2 , 4);
console.log(maiorNumero);

function numero(a){
    return a * a;
}

let resultado = numero(4);
console.log(resultado);

function indiceDeMassaCorporal(altura , peso){
    return peso / (altura * altura);
}

let resultado = indiceDeMassaCorporal(1,70 , 60);
console.log(resultado);

let listaGenerica = [];

let linguagensDeProgramação = ['JavaScript' , 'C' , 'C++' , 'Kotlin' , 'Python'];
linguagensDeProgramação.push('Java' , 'Ruby' , 'GoLang');

let frutas = ['abacate' , 'abacaxi' , 'melancia'];
console.log(frutas[0]);
console.log(frutas[1]);
console.log(frutas[frutas.length - 1]);
